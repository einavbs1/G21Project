            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label id="lblwaitmsg" fx:id="lblwaitmsg" alignment="CENTER" contentDisplay="CENTER" layoutX="434.0" layoutY="475.0" prefHeight="80.0" prefWidth="235.0" text="Please wait while trying connect to the server..." textAlignment="CENTER" textFill="#b81212" visible="false" wrapText="true">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label fx:id="lblTitle" alignment="CENTER" contentDisplay="CENTER" layoutX="18.0" layoutY="15.0" prefHeight="32.0" prefWidth="1066.0" text="Connection Setup" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
