            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Button id="btnConnect" fx:id="btnConnect" layoutX="505.0" layoutY="413.0" mnemonicParsing="false" onAction="#Connect" prefHeight="40.0" prefWidth="100.0" text="Connect" textFill="#478150">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Label id="lblServerip" fx:id="lblServerip" layoutX="381.0" layoutY="215.0" text="Server ip :">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField id="serveriptxt" fx:id="serveriptxt" layoutX="516.0" layoutY="214.0" prefHeight="30.0" prefWidth="200.0" />
      <Label id="lblinstruction" fx:id="lblinstruction" alignment="CENTER" contentDisplay="CENTER" layoutX="18.0" layoutY="133.0" prefHeight="27.0" prefWidth="1067.0" text="Please enter the server's ip address" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
