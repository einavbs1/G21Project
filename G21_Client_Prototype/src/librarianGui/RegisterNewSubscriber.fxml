            <Font name="System Bold" size="14.0" />
         </font></Button>
      
      <Button fx:id="btnBack" layoutX="48.0" layoutY="654.0" mnemonicParsing="false" onAction="#Back" prefHeight="30.0" prefWidth="50.0" text="Back" textAlignment="CENTER" textFill="#262d71">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      
      <Button fx:id="btnExit" layoutX="1005.0" layoutY="656.0" mnemonicParsing="false" onAction="#getExitBtn" prefHeight="30.0" prefWidth="50.0" text="Exit" textAlignment="CENTER" textFill="#b81212">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      
      <Label id="lblMessageStatus" fx:id="lblMessageStatus" alignment="CENTER" contentDisplay="CENTER" layoutX="387.0" layoutY="532.0" prefHeight="82.0" prefWidth="320.0" textAlignment="CENTER" textFill="#478150" wrapText="true">
