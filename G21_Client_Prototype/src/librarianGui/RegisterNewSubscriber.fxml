         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <Label fx:id="lblInstruction" alignment="TOP_CENTER" contentDisplay="CENTER" layoutX="18.0" layoutY="115.0" prefHeight="27.0" prefWidth="1067.0" text="Please enter the new Subscriber details" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
         <font>
            <Font size="20.0" />
         </font></Label>
      
      <Label fx:id="lblId" layoutX="381.0" layoutY="204.0" text="Subscriber ID :">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="txtId" editable="true" layoutX="526.0" layoutY="203.0" prefHeight="30.0" prefWidth="190.0" />

      <Label fx:id="lblName" layoutX="383.0" layoutY="252.0" text="Name :">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="txtName" editable="true" layoutX="525.0" layoutY="251.0" prefHeight="30.0" prefWidth="190.0" />

      <Label fx:id="lblPhoneNumber" layoutX="381.0" layoutY="301.0" text="Phone Number :">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="txtPhoneNumber" editable="true" layoutX="525.0" layoutY="302.0" prefHeight="30.0" prefWidth="190.0" />

      <Label fx:id="lblEmail" layoutX="381.0" layoutY="352.0" text="Email Address :">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="txtEmail" editable="true" layoutX="524.0" layoutY="352.0" prefHeight="30.0" prefWidth="190.0" />

      <Label fx:id="lblPassword" layoutX="381.0" layoutY="402.0" text="Password :">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="txtPassword" editable="true" layoutX="524.0" layoutY="399.0" prefHeight="30.0" prefWidth="190.0" />

      <Button fx:id="btnAddSubscriber" cancelButton="false" layoutX="490.0" layoutY="477.0" mnemonicParsing="false" onAction="#AddSubscriberBtn" prefHeight="30.0" prefWidth="120.0" text="Add Subscriber" textFill="#478150">
