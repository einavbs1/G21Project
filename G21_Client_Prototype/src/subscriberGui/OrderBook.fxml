<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriberControllers.OrderBookController">
   <children>
      <TextField id="txtBookBarcode" fx:id="txtBookBarcode" layoutX="188.0" layoutY="83.0" prefHeight="25.0" prefWidth="200.0" />
      <Label id="lblBookBarcode" fx:id="lblBookBarcode" layoutX="72.0" layoutY="87.0" text="Book Barcode:" />
      <Label id="lblmsgMain" fx:id="lblmsgMain" alignment="CENTER" contentDisplay="CENTER" layoutX="34.0" layoutY="193.0" prefHeight="93.0" prefWidth="529.0" textAlignment="CENTER" textFill="#d31f1f" wrapText="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="btnExit" layoutX="534.0" layoutY="361.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />
      <Button fx:id="btnBack" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Label id="lblTitle" fx:id="lblTitle" layoutX="180.0" layoutY="14.0" text="Order New Book" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button id="btnLoadBook" fx:id="btnLoadBook" layoutX="496.0" layoutY="83.0" mnemonicParsing="false" onAction="#loadBook" text="Load Book" />
      <Label id="lblinstructions" fx:id="lblinstructions" alignment="TOP_CENTER" layoutX="123.0" layoutY="49.0" prefHeight="20.0" prefWidth="329.0" text="Please enter the barcode of the book that you want to order. " wrapText="true" />
      <Label id="lblTipToFindBook" fx:id="lblTipToFindBook" alignment="CENTER" contentDisplay="CENTER" layoutX="15.0" layoutY="114.0" prefHeight="35.0" prefWidth="568.0" text="***Note: You can order book only if unavailable in the library or have a place in order list .if you dont know the barcode of the book that you want to order, you can find it on &quot;Search books page&quot;" textAlignment="CENTER" wrapText="true" />
      <Button id="btnSearchBooks" fx:id="btnSearchBooks" layoutX="255.0" layoutY="157.0" mnemonicParsing="false" onAction="#openSearchBookScreen" text="Search books" />
      <Label id="lblmsgOrder" fx:id="lblmsgOrder" alignment="CENTER" contentDisplay="CENTER" layoutX="83.0" layoutY="324.0" prefHeight="62.0" prefWidth="444.0" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
      <Button id="btnOrderBook" fx:id="btnOrderBook" layoutX="260.0" layoutY="299.0" mnemonicParsing="false" onAction="#orderBook" text="Order Book" />
   </children>
</AnchorPane>
