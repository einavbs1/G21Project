<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriberControllers.UpdateMyDataController">
   <children>
      <Label fx:id="lblId" layoutX="32.0" layoutY="80.0" text="Subscriber ID:" />
      <TextField fx:id="txtId" editable="true" layoutX="161.0" layoutY="76.0" />

      <Label fx:id="lblName" layoutX="32.0" layoutY="117.0" text="Name:" />
      <TextField fx:id="txtName" editable="false" layoutX="161.0" layoutY="115.0" />

      <Label fx:id="lblPhoneNumber" layoutX="32.0" layoutY="161.0" text="Phone Number:" />
      <TextField fx:id="txtPhoneNumber" editable="true" layoutX="161.0" layoutY="157.0" />

      <Label fx:id="lblEmail" layoutX="32.0" layoutY="201.0" text="Email Address:" />
      <TextField fx:id="txtEmail" editable="true" layoutX="161.0" layoutY="197.0" />

      <Label fx:id="lblPassword" layoutX="32.0" layoutY="241.0" text="Password:" />
      <TextField fx:id="txtPassword" editable="true" layoutX="161.0" layoutY="237.0" />

      <Label fx:id="lblStatus" layoutX="32.0" layoutY="281.0" text="Status:" />
      <TextField fx:id="txtStatus" editable="false" layoutX="161.0" layoutY="277.0" />

      <Button fx:id="btnUpdate" layoutX="133.0" layoutY="355.0" mnemonicParsing="false" onAction="#UpdateBtn" text="Update" />
      <Button fx:id="btnBack" layoutX="20.0" layoutY="467.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Button fx:id="btnExit" layoutX="292.0" layoutY="455.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />

      <Label id="lblMessage" fx:id="lblMessage" alignment="CENTER" layoutX="20.0" layoutY="385.0" prefHeight="59.0" prefWidth="320.0" textAlignment="CENTER" textFill="#218d54" wrapText="true">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Label id="lblTitle" fx:id="lblTitle" alignment="CENTER" layoutX="81.0" layoutY="23.0" text="Update My Data">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label id="lblErrMessage" fx:id="lblErrMessage" alignment="CENTER" layoutX="20.0" layoutY="396.0" prefHeight="59.0" prefWidth="320.0" textFill="RED">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Label id="lblFrozenUntil" fx:id="lblFrozenUntil" layoutX="36.0" layoutY="314.0" prefHeight="32.0" prefWidth="273.0" />
   </children>
</AnchorPane>
