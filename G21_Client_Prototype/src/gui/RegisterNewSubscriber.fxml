<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterNewSubscriberController">
   <children>
      <Label fx:id="lblTitle" layoutX="62.0" layoutY="34.0" text="Register New Subscriber">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label fx:id="lblInstruction" layoutX="16.0" layoutY="101.0" text="Please enter the new Subscriber details:" />
      
      <Label fx:id="lblId" layoutX="35.0" layoutY="147.0" text="Subscriber ID:" />
      <TextField fx:id="txtId" editable="true" layoutX="164.0" layoutY="143.0" />

      <Label fx:id="lblName" layoutX="35.0" layoutY="187.0" text="Name:" />
      <TextField fx:id="txtName" editable="true" layoutX="164.0" layoutY="183.0" />

      <Label fx:id="lblPhoneNumber" layoutX="35.0" layoutY="227.0" text="Phone Number:" />
      <TextField fx:id="txtPhoneNumber" editable="true" layoutX="164.0" layoutY="223.0" />

      <Label fx:id="lblEmail" layoutX="35.0" layoutY="267.0" text="Email Address:" />
      <TextField fx:id="txtEmail" editable="true" layoutX="164.0" layoutY="263.0" />

      <Label fx:id="lblPassword" layoutX="35.0" layoutY="307.0" text="Password:" />
      <TextField fx:id="txtPassword" editable="true" layoutX="164.0" layoutY="303.0" />

      <Button fx:id="btnAddSubscriber" cancelButton="false" layoutX="132.0" layoutY="347.0" mnemonicParsing="false" onAction="#AddSubscriberBtn" text="Add Subscriber" />
      
      <Button fx:id="btnBack" layoutX="32.0" layoutY="473.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      
      <Button fx:id="btnExit" layoutX="282.0" layoutY="473.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />
      
      <Label id="lblMessageStatus" fx:id="lblMessageStatus" alignment="CENTER" layoutX="21.0" layoutY="383.0" prefHeight="82.0" prefWidth="320.0" textAlignment="CENTER" textFill="#116b32" wrapText="true">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label id="lblErrMsg" fx:id="lblErrMsg" alignment="CENTER" layoutX="21.0" layoutY="383.0" prefHeight="82.0" prefWidth="320.0" textFill="#dd0000" wrapText="true">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
