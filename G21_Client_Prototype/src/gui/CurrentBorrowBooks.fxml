<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CurrentBorrowBooksController">
   <children>
      <!-- Labels for Subscriber ID and Borrow Number -->
      <Label fx:id="lblId" layoutX="20.0" layoutY="114.0" text="Subscriber ID:" />
      <TextField fx:id="txtSubscriberId" layoutX="120.0" layoutY="114.0" prefWidth="200.0" />
      
      <Label fx:id="lblBorrowId" layoutX="20.0" layoutY="347.0" text="Borrow Number:" />
      <TextField fx:id="txtBorrowNumber" layoutX="120.0" layoutY="347.0" prefWidth="200.0" />
      
      <!-- Buttons for Show Borrows and Extend Borrow -->
      <Button fx:id="btnShowBorrows" layoutX="350.0" layoutY="114.0" mnemonicParsing="false" onAction="#ShowBorrowsbtn" text="Load Active Borrows" />
      <Button fx:id="btnExtendBorrow" layoutX="350.0" layoutY="347.0" mnemonicParsing="false" onAction="#btnLoadBorrow" text="Load Borrow" />

      <!-- TableView for Borrow Records -->
      <TableView fx:id="tableBorrows" layoutX="20.0" layoutY="160.0" prefHeight="170.0" prefWidth="703.0">
         <columns>
            <TableColumn fx:id="colBorrowNumber" prefWidth="104.0" text="Borrow Number" />
            <TableColumn fx:id="colBookBarcode" prefWidth="96.800048828125" text="Book Barcode" />
            <TableColumn fx:id="colBookTitle" prefWidth="156.79998779296875" text="Book Title" />
            <TableColumn fx:id="colBookCopyNo" prefWidth="97.5999755859375" text="Book Copy No" />
            <TableColumn fx:id="colBorrowDate" prefWidth="111.20001220703125" text="Borrow Date" />
            <TableColumn fx:id="colExpectReturnDate" prefWidth="136.0" text="Expected Return Date" />
         </columns>
      </TableView>

      <!-- Labels for error and message status -->
      <Label fx:id="lblIdError" layoutX="20.0" layoutY="330.0" textFill="red" />
      <Label fx:id="lblMessageStatus" layoutX="20.0" layoutY="360.0" textFill="green" />

      <!-- Buttons for Back and Exit -->
      <Button fx:id="btnBack" layoutX="653.0" layoutY="403.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Button fx:id="btnExit" layoutX="713.0" layoutY="403.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />
      
      <Label fx:id="lblId1" layoutX="20.0" layoutY="82.0" prefHeight="18.0" prefWidth="326.0" text="Please enter subscriber id again to load his active borrows:" />
      <Label fx:id="lblId11" layoutX="228.0" layoutY="29.0" prefHeight="32.0" prefWidth="326.0" text="Subscriber Current Borrow Books" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      
      <Label fx:id="lblBorrowId1" layoutX="20.0" layoutY="384.0" text="Number of extension days for this book:" />
      <TextField fx:id="txtBorrowNumber1" layoutX="246.0" layoutY="384.0" prefHeight="26.0" prefWidth="74.0" />
      <Button fx:id="btnExtendBorrow1" layoutX="350.0" layoutY="384.0" mnemonicParsing="false" onAction="#btnExtendBorrow" text="Extend Borrow" />
   </children>
</AnchorPane>
