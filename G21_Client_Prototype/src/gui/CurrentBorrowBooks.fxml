<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="581.0" prefWidth="818.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CurrentBorrowBooksController">
   <children>
      <!-- Labels for Subscriber ID and Borrow Number -->
      <Label id="lblId" fx:id="lblId" layoutX="20.0" layoutY="114.0" text="Subscriber ID:" />
      <TextField id="txtSubscriberId" fx:id="txtSubscriberId" layoutX="120.0" layoutY="114.0" prefWidth="200.0" />
      
      <Label id="lblBorrowNum" fx:id="lblBorrowNum" layoutX="28.0" layoutY="402.0" text="Borrow Number:" />
      <TextField id="txtBorrowNumber" fx:id="txtBorrowNumber" editable="false" layoutX="128.0" layoutY="402.0" prefWidth="200.0" />
      
      <!-- Buttons for Show Borrows and Extend Borrow -->
      <Button id="btnShowAllMyActiveBorrows" fx:id="btnShowAllMyActiveBorrows" layoutX="350.0" layoutY="114.0" mnemonicParsing="false" onAction="#btnLoadAllMyActiveBorrows" text="Load Active Borrows" />
      <Button id="btnLoadOneBorrow" fx:id="btnLoadOneBorrow" disable="true" layoutX="358.0" layoutY="402.0" mnemonicParsing="false" onAction="#btnLoadOneBorrowToEdit" text="Load Borrow" />

      <!-- TableView for Borrow Records -->
      <TableView fx:id="tableBorrows" layoutX="16.0" layoutY="173.0" prefHeight="195.0" prefWidth="787.0">
         <columns>
            <TableColumn fx:id="colBorrowNumber" prefWidth="104.0" text="Borrow Number" />
            <TableColumn fx:id="colBookBarcode" prefWidth="112.0" text="Book Barcode" />
            <TableColumn fx:id="colBookTitle" prefWidth="144.0" text="Book Title" />
            <TableColumn fx:id="colBookCopyNo" prefWidth="96.0" text="Book Copy No" />
            <TableColumn fx:id="colBorrowDate" prefWidth="165.0" text="Borrow Date" />
            <TableColumn fx:id="colExpectReturnDate" prefWidth="165.0" text="Expected Return Date" />
         </columns>
      </TableView>
      <Label id="lblMessage" fx:id="lblMessage" layoutX="135.0" layoutY="472.0" prefHeight="87.0" prefWidth="505.0" textFill="#0e5b0e" wrapText="true">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>

      <!-- Buttons for Back and Exit -->
      <Button id="btnBack" fx:id="btnBack" layoutX="676.0" layoutY="527.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Button id="btnExit" fx:id="btnExit" layoutX="736.0" layoutY="527.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />
      
      <Label id="lblInstructions" fx:id="lblInstructions" layoutX="20.0" layoutY="82.0" prefHeight="18.0" prefWidth="326.0" text="Please enter subscriber id to load his active borrows:" />
      <Label id="lblTitle" fx:id="lblTitle" layoutX="237.0" layoutY="22.0" prefHeight="32.0" prefWidth="326.0" text="Subscriber Current Borrow Books" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      
      <Label id="lblDaysExtend" fx:id="lblDaysExtend" layoutX="28.0" layoutY="439.0" text="Number of extension days for this book:" />
      <TextField id="txtDaysToExtend" fx:id="txtDaysToExtend" editable="false" layoutX="254.0" layoutY="439.0" prefHeight="26.0" prefWidth="74.0" />
      <Button id="btnExtendSelectedBorrow" fx:id="btnExtendSelectedBorrow" disable="true" layoutX="358.0" layoutY="439.0" mnemonicParsing="false" onAction="#btnExtendBorrow" text="Extend Borrow" />
      <Label id="lblInstructions2" fx:id="lblInstructions2" layoutX="272.0" layoutY="377.0" prefHeight="17.0" prefWidth="200.0" text="To Extend Borrow please fill below:" />
      <Label id="lblSelectedBorrowDetails" fx:id="lblSelectedBorrowDetails" layoutX="472.0" layoutY="396.0" prefHeight="87.0" prefWidth="326.0" wrapText="true">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>
   </children>
</AnchorPane>
