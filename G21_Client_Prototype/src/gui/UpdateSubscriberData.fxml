<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="561.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateSubscriberDataController">
   <children>
      <Label fx:id="lblInstruction" layoutX="12.0" layoutY="73.0" text="Please enter the Subscriber ID you want to update:" />
      <Label fx:id="lblId" layoutX="31.0" layoutY="107.0" text="Subscriber ID:" />
      <TextField fx:id="txtId" editable="true" layoutX="160.0" layoutY="103.0" />

      <Button fx:id="btnLoad" layoutX="90.0" layoutY="146.0" mnemonicParsing="false" onAction="#Loadbtn" prefWidth="180.0" text="Load Subscriber Details" />

      <Label fx:id="lblName" layoutX="31.0" layoutY="195.0" text="Name:" />
      <TextField fx:id="txtName" editable="true" layoutX="160.0" layoutY="191.0" />

      <Label fx:id="lblPhoneNumber" layoutX="31.0" layoutY="233.0" text="Phone Number:" />
      <TextField fx:id="txtPhoneNumber" editable="true" layoutX="160.0" layoutY="229.0" />

      <Label fx:id="lblEmail" layoutX="31.0" layoutY="273.0" text="Email Address:" />
      <TextField fx:id="txtEmail" editable="true" layoutX="160.0" layoutY="269.0" />

      <Label fx:id="lblPassword" layoutX="31.0" layoutY="313.0" text="Password:" />
      <TextField fx:id="txtPassword" editable="true" layoutX="160.0" layoutY="309.0" />

      <Label fx:id="lblStatus" layoutX="31.0" layoutY="353.0" text="Status:" />

      <Button fx:id="btnUpdate" disable="true" layoutX="146.0" layoutY="395.0" mnemonicParsing="false" onAction="#UpdateBtn" text="Update" />
      <Button fx:id="btnBack" layoutX="29.0" layoutY="514.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Button fx:id="btnExit" layoutX="292.0" layoutY="514.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />

      <Label fx:id="lblMessage" layoutX="20.0" layoutY="430.0" prefHeight="68.0" prefWidth="320.0" text=" " textAlignment="CENTER" textFill="#086f03" wrapText="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="lblTitle" layoutX="65.0" layoutY="24.0" text="Update Subscriber Data">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <RadioButton fx:id="radioBtnActive" layoutX="160.0" layoutY="353.0" mnemonicParsing="false" text="Active" />
      <RadioButton fx:id="radioBtnFrozen" layoutX="252.0" layoutY="353.0" mnemonicParsing="false" text="Frozen" />
      <Button fx:id="btnManageBorrows" disable="true" layoutX="122.0" layoutY="514.0" mnemonicParsing="false" onAction="#OpenCurrectBorrows" text="Manage Borrows" />
   </children>
</AnchorPane>
