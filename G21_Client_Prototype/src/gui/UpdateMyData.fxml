<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateMyDataController">
   <children>
      <Label fx:id="lblId" layoutX="31.0" layoutY="111.0" text="Subscriber ID:" />
      <TextField fx:id="txtId" editable="true" layoutX="160.0" layoutY="107.0" />

      <Label fx:id="lblName" layoutX="31.0" layoutY="148.0" text="Name:" />
      <TextField fx:id="txtName" editable="false" layoutX="160.0" layoutY="146.0" />

      <Label fx:id="lblPhoneNumber" layoutX="31.0" layoutY="192.0" text="Phone Number:" />
      <TextField fx:id="txtPhoneNumber" editable="true" layoutX="160.0" layoutY="188.0" />

      <Label fx:id="lblEmail" layoutX="31.0" layoutY="232.0" text="Email Address:" />
      <TextField fx:id="txtEmail" editable="true" layoutX="160.0" layoutY="228.0" />

      <Label fx:id="lblPassword" layoutX="31.0" layoutY="272.0" text="Password:" />
      <TextField fx:id="txtPassword" editable="true" layoutX="160.0" layoutY="268.0" />

      <Label fx:id="lblStatus" layoutX="31.0" layoutY="312.0" text="Status:" />
      <TextField fx:id="txtStatus" editable="false" layoutX="160.0" layoutY="308.0" />

      <Button fx:id="btnUpdate" layoutX="133.0" layoutY="355.0" mnemonicParsing="false" onAction="#UpdateBtn" text="Update" />
      <Button fx:id="btnBack" layoutX="20.0" layoutY="467.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Button fx:id="btnExit" layoutX="292.0" layoutY="455.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />

      <Label id="lblMessage" fx:id="lblMessage" alignment="CENTER" layoutX="20.0" layoutY="385.0" prefHeight="59.0" prefWidth="320.0" textAlignment="CENTER" textFill="#218d54" wrapText="true">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Label id="lblTitle" fx:id="lblTitle" alignment="CENTER" layoutX="81.0" layoutY="23.0" text="Update My Data">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label id="lblErrMessage" fx:id="lblErrMessage" alignment="CENTER" layoutX="20.0" layoutY="396.0" prefHeight="59.0" prefWidth="320.0" textFill="RED">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
