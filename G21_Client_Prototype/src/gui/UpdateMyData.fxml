      <Button fx:id="btnBack" layoutX="50.0" layoutY="479.0" mnemonicParsing="false" onAction="#Back" text="Back" />
      <Button fx:id="btnExit" layoutX="266.0" layoutY="479.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />

      <Label fx:id="lblStatusMessage" layoutX="20.0" layoutY="449.0" prefHeight="40.0" prefWidth="320.0" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="lblIdError" layoutX="20.0" layoutY="169.0" prefHeight="40.0" prefWidth="320.0" textAlignment="CENTER" textFill="#bf3030" wrapText="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="lblInstruction1" layoutX="100.0" layoutY="34.0" text="Update My Data">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
